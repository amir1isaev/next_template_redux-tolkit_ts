{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/store": ["./core/store"],
			"@/hooks": ["./core/hooks"],
			"@/models": ["./core/models"],
			"@/context": ["./core/context"],
			"@/config": ["./core/config"],
			"@/enums": ["./core/enums"],
			"@/routes": ["./core/routes"],

			"@/components/*": ["./components/*"],
			"@/layout/*": ["./components/layout/*"],
			"@/ui/*": ["./components/ui/*"],
			"@/styles/*": ["./styles/*"],
			"@/store/*": ["./core/store/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
